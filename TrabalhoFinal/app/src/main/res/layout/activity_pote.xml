<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/ivFoto"
        android:layout_below="@+id/tvVoltarPote"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOME"
        android:id="@+id/tvNome"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#08580e"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7" />
    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor"
        android:id="@+id/textView2"
        android:layout_below="@+id/tvNome"
        android:layout_toEndOf="@+id/ivFoto"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALor sensor"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />
        -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de irrigação: "
        android:id="@+id/textView3"
        android:layout_below="@+id/ivFoto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="23dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ir"
        android:id="@+id/tvTipoIrrigacao"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/ivFoto"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threshold/Hora"
        android:id="@+id/tvTH"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="29dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvThresholdHora"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/tvTH"
        android:layout_alignStart="@+id/tvTipoIrrigacao" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar"
        android:id="@+id/btAlterarPote"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/tvVoltarPote"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de água: "
        android:id="@+id/textView7"
        android:layout_below="@+id/tvTH"
        android:layout_alignStart="@+id/tvTH"
        android:layout_marginTop="29dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="18dp"
        android:id="@+id/tvQntAgua"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/tvThresholdHora" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_above="@+id/btAlterarPote"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btAlterarPote"
        android:layout_alignParentEnd="true" />


</RelativeLayout>